<div class="max-w-lg mx-auto">
  <div class="py-5 px-7 space-y-5 bg-gray-200 border-md rounded-md">
    <div>
      <strong>Product Name:</strong>
      <%= @product.name %>
    </div>
    <div>
      <strong>Description:</strong>
      <%= @product.description %>
    </div>
    <% @variants.each do |variant| %>
      <div class="px-6 py-5 bg-white rounded">
          <div>
          <strong>Spec:</strong>
          <% variant.option_values.each do |option_value| %>
            <%= option_value.value %>
          <% end %>
        </div>
        <div class="flex space-x-5">
          <strong>Price:</strong>
          <p>$<%= variant.price %></p>
        </div>
        <div>
          <strong>Stock:</strong> 
          <%= variant.quantity %>
        </div>
        <div class="my-5">
          <img src=<%= variant.image %>>
        </div>
        <div class="flex justify-end">
          <button class="px-6 py-2 text-white text-sm bg-blue-500">Add to cart</button>
        </div>
      </div>
      <% end %>
  </div>
</div>
