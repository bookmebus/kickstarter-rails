<div class="mx-24 py-10 flex justify-between">
    <h2 class="text-lg">
        Vendor List
    </h2>

    <% if user_signed_in? %>
        <%= link_to "Profile", edit_user_registration_path %>
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete %>
    <% else %>
        <div class="flex space-x-5">
            <%= link_to "Sign Up", new_user_registration_path, class: "px-6 py-2 bg-blue-500 text-white" %>
            <%= link_to "Sign In", new_user_session_path, class: "px-6 py-2 bg-blue-500 text-white" %>
        </div>
    <% end %>
</div>

<div class="max-w-5xl mx-auto grid grid-cols-4">
    <% @vendors.each do |vendor| %>
        <%= link_to vendor do %>
            <div class="border border-blue-500">
                <img src=<%= vendor.profile_image %>>
                <p class="mx-auto"><%= vendor.name %></p>
            </div>
        <% end %>
    <% end %>
</div>